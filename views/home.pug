html

	head
		link(rel='stylesheet', href='/styles/home.css')

		script(src="https://code.jquery.com/jquery-3.2.1.js"
			integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
			crossorigin="anonymous")

		script(src='/scripts/home.js')

		title Yes

	body

		include contact.pug

		div#grid

			div.horizontal#top

			div.horizontal#bottom

			div.vertical#left

			div.vertical#right

			div.display
				
				ul.visuals(style={display:'none'})

					each item in cont

						if item.group=="visual"

							li(style=`background-image:url(${item.bckimg})`)
								a(href=item.hreff) #{item.project}

				ul.code(style={display:'none'})

					each item in cont

						if item.group=="code"

							li(style=`background-image:url(${item.bckimg})`)
								a(href=item.hreff) #{item.project}

				block routes

